{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "rootDir": ".",
    "paths": {
      "utils/*": ["src/utils/*"],
      "beverage/*": ["src/beverage/*"],
      "ingredient/*": ["src/ingredient/*"],
      "language/*": ["src/language/*"],
      "place/*": ["src/place/*"],
      "user/*": ["src/user/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
