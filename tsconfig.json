{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "moduleResolution": "node",
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "rootDir": ".",
    "lib": ["es2019"],
    "paths": {
      "beverage/*": ["src/beverage/*"],
      "country/*": ["src/country/*"],
      "ingredient/*": ["src/ingredient/*"],
      "institution/*": ["src/institution/*"],
      "language/*": ["src/language/*"],
      "place/*": ["src/place/*"],
      "user/*": ["src/user/*"],
      "utils/*": ["src/utils/*"]
    }
  },
  "exclude": ["node_modules", "dist"]
}
